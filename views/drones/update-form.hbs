<h2>Update the drone</h2>

<form action="/drones/{{droneToUpdate._id}}/edit" method="post" class="form">
    <label>Name</label>
    <input type="text" name="name" value="{{droneToUpdate.name}}" />
    <label>Number of propellers</label>
    <input type="number" name="propellers" value="{{droneToUpdate.propellers}}"/>
    <label>Maximum speed</label>
    <input type="number" name="maxSpeed" value="{{droneToUpdate.maxSpeed}}"/>
    <button class="button">update</button>
</form>